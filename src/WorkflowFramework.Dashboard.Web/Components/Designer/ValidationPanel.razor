<div class="border-t border-gray-700">
    @if (ValidationErrors.Count > 0)
    {
        <div class="bg-gray-850 max-h-32 overflow-y-auto">
            @foreach (var error in ValidationErrors)
            {
                <button @onclick="() => OnErrorClicked.InvokeAsync(error.StepName)"
                        class="w-full flex items-center gap-2 px-3 py-1 text-xs hover:bg-gray-700 text-left @(error.StepName is not null ? "cursor-pointer" : "cursor-default")">
                    <span class="@GetSeverityClass(error.Severity)">@GetSeverityIcon(error.Severity)</span>
                    @if (error.StepName is not null)
                    {
                        <span class="text-blue-400 font-mono">@error.StepName</span>
                    }
                    <span class="text-gray-300">@error.Message</span>
                </button>
            }
        </div>
    }
</div>

@code {
    [Parameter] public List<ValidationErrorDto> ValidationErrors { get; set; } = [];
    [Parameter] public EventCallback<string?> OnErrorClicked { get; set; }

